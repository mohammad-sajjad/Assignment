<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/home_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/home_user_name"
            android:layout_toRightOf="@id/home_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sajjad"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/home_profile_image" />

        <TextView
            android:id="@+id/home_user_email"
            android:layout_below="@id/home_user_name"
            android:layout_toRightOf="@id/home_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="mohammadsajjad679@gmail.com"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/home_profile_image" />
    </RelativeLayout>

    <Button
        android:id="@+id/home_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Logout"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_audio_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

</LinearLayout>